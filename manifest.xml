<?xml version="1.0"?>
<!DOCTYPE plugin SYSTEM "manifest.dtd">
<plugin version="2">
	<info>
		<version>0.1</version>
		<name>texttospeech</name>
		<title>Text To Speech</title>
		<author>Ronald Toussaint &lt;lronald.toussaint@zarafa.com&gt;</author>
		<authorURL>http://www.zarafa.com</authorURL>
		<description>The Text To Speech plugin makes it possible to have messages read out loud.</description>
	</info>
	<config>
		<configfile>config.php</configfile>
	</config>
	<components>
		<component>
			<files>
				<client>
					<clientfile load="release">js/texttospeech.js</clientfile>
					<clientfile load="debug">js/texttospeech-debug.js</clientfile>
					<clientfile load="source">js/TextToSpeech.js</clientfile>
					<clientfile load="source">js/tts.voicerss.js</clientfile>
					<clientfile load="source">js/tts.native.js</clientfile>
					<clientfile load="source">js/languageMap.js</clientfile>
					<clientfile load="source">js/settings/SettingsCategoryTextToSpeech.js</clientfile>
					<clientfile load="source">js/settings/SettingsWidgetTextToSpeechVoiceRSS.js</clientfile>
					<clientfile load="source">js/settings/SettingsWidgetTextToSpeechVoices.js</clientfile>
				</client>
				<resources>
					<resourcefile load="source">css/texttospeech.css</resourcefile>
				</resources>
			</files>
		</component>
	</components>
</plugin>
